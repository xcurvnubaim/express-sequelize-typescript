# Application Configuration
APP_ENV=development
APP_PORT=3000
APP_HOST=localhost
SECRET_KEY=development-secret-key-change-in-production

# Database Configuration
DB_DIALECT=mysql
DB_HOST_READ_USER=localhost
DB_HOST_WRITE_USER=localhost
DB_PORT_USER=3306
DB_NAME_USER=express_app_db
DB_USER_USER=root
DB_PASSWORD_USER=password

DB_HOST_READ_POST=localhost
DB_HOST_WRITE_POST=localhost
DB_PORT_POST=3306
DB_NAME_POST=POST_db
DB_USER_POST=root
DB_PASSWORD_POST=password

# Logging Configuration
APP_LOG_LEVEL=info
LOG_CHANNEL=console
LOG_FILE_PATH=./storage/logs/app.log

# Storage Configuration
# Main storage type: 'local' or 's3'
STORAGE_TYPE=local

# Local Storage Configuration (used when STORAGE_TYPE=local)
STORAGE_ROOT_DIR=./uploads
STORAGE_BASE_URL=http://localhost:3000/uploads
STORAGE_DEFAULT_EXPIRY_SEC=3600

# Multiple Storage Directories (optional - defaults to subdirectories of STORAGE_ROOT_DIR)
# STORAGE_USER_DIR=./uploads/users        # For user avatars, profiles
# STORAGE_POST_DIR=./uploads/posts        # For post attachments
# STORAGE_DOCUMENT_DIR=./uploads/documents # For general documents

# S3/MinIO Storage Configuration (used when STORAGE_TYPE=s3)
S3_ENDPOINT=http://localhost:9000
S3_REGION=us-east-1
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=default-bucket
S3_FORCE_PATH_STYLE=true
S3_AUTO_CREATE_BUCKET=true
S3_DEFAULT_EXPIRY_SEC=3600

# Multiple S3 Buckets (optional - defaults to main S3_BUCKET)
# S3_USER_BUCKET=user-uploads           # For user-specific uploads
# S3_POST_BUCKET=post-attachments       # For post attachments
# S3_DOCUMENT_BUCKET=documents          # For general documents
